@model Scaffolding.Models.FeplTable

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>FeplTable</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Project Name
        </dt>
        <dd class="col-sm-10">
            @Model.feplProjectNav?.name
        </dd>
        <dt class="col-sm-2">
            Table Name
        </dt>
        <dd class="col-sm-10">
            @Model.name
        </dd>
        <dt class="col-sm-2">
            Model Name
        </dt>
        <dd class="col-sm-10">
            @Model.modelName
        </dd>
    </dl>

    <form asp-action="Delete">
        <input name="url" hidden value="@ViewBag.url" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="@ViewBag.url">Back to List</a>
    </form>
</div>