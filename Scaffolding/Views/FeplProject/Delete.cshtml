@model Scaffolding.Models.FeplProject

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
@if (ViewBag.message == null)
{
    <h3>Are you sure you want to delete this?</h3>
}
else
{
    <h3 style="color:darkcyan">@ViewBag.message</h3>
}
<div>
    <h4>FeplProject</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Project Name
        </dt>
        <dd class="col-sm-10">
            @Model.name
        </dd>
        <dt class="col-sm-2">
           Alias Name
        </dt>
        <dd class="col-sm-10">
            @Model.aliasName
        </dd>
        <dt class="col-sm-2">
           Login Required
        </dt>
        <dd class="col-sm-10">
            @(Model.isLoginRequired == 1 ? "Yes" : "No")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
