@model Scaffolding.Models.FeplField

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>FeplField</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Table Name
        </dt>
        <dd class="col-sm-10">
            @Model.tableNav?.name
        </dd>
        <dt class="col-sm-2">
            Field Name
        </dt>
        <dd class="col-sm-10">
            @Model.name
        </dd>
        <dt class="col-sm-2">
            DataType Name
        </dt>
        <dd class="col-sm-10">
            @Model.dataTypeNav?.name
        </dd>
        <dt class="col-sm-2">
            length
        </dt>
        <dd class="col-sm-10">
            @Model.length
        </dd>
        <dt class="col-sm-2">
            IsPrimaryKey
        </dt>
        <dd class="col-sm-10">
            @(Model.isPrimaryKey == 1 ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            IsRequired
        </dt>
        <dd class="col-sm-10">
            @(Model.isRequired == 1 ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            IsHidden
        </dt>
        <dd class="col-sm-10">
            @(Model.isHidden == 1 ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            ForeignKey Name
        </dt>
        <dd class="col-sm-10">
            @Model.foreignKeyNav?.name
        </dd>
        <dt class="col-sm-2">
            Print Name
        </dt>
        <dd class="col-sm-10">
            @Model.printName
        </dd>
        <dt class="col-sm-2">
            Default Value
        </dt>
        <dd class="col-sm-10">
            @Model.defaultValue
        </dd>
        <dt class="col-sm-2">
            Foreign Table
        </dt>
        <dd class="col-sm-10">
            @Model.foreignTableNav?.name
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input name="url" hidden value="@ViewBag.url" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="@ViewBag.url">Back to List</a>
    </form>
</div>
