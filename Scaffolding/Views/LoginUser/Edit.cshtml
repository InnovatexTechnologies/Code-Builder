@model Scaffolding.Models.LoginUser

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>LoginUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input hidden asp-for="id" class="form-control" />
                <input hidden asp-for="numId" class="form-control" />
                <input hidden asp-for="idPrefix" class="form-control" />
            <div class="form-group">
                <label class="control-label">User Name</label>
                <input name="userName" id="userName" value="@Model.name" required class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input name="password" id="password" value="@Model.password" required class="form-control" />
            </div>
            <input name = "url" hidden value = "@ViewBag.url" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@ViewBag.url">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
