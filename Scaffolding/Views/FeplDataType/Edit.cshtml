@model Scaffolding.Models.FeplDataType

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FeplDataType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="id" class="form-control" />
            <input hidden asp-for="numId" class="form-control" />
            <input hidden asp-for="idPrefix" class="form-control" />
            <div class="form-group">
                <label class="control-label">name</label>
                <input name="name" id="name" value="@Model.name" required class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">cSharp</label>
                <input name="cSharp" id="cSharp" value="@Model.cSharp" required class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">sqLite</label>
                <input name="sqLite" id="sqLite" value="@Model.sqLite" required class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}